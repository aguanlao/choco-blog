<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="mt-4"> <%= @user.username %>'s profile </h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <% if @user.posts.empty? %>
        <div class="h4"><%= @user.username %> hasn't posted anything yet.</div>
      <% else %>
        <%= render 'posts/posts_list', obj: @user.posts %>
      <% end %>
    </div>
  </div>
</div>