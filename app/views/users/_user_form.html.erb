<div class="row justify-content-center">
  <div class="col-10">
    <%= render 'shared/errors', obj: @user %>
    <!-- Form -->
    <%= form_with(model: @user, local: true) do |form|  %>
      <div class="form-group row mt-4">
      
        <%= form.label :username, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= form.text_field :username, class: "form-control shadow rounded", placeholder:"" %>
        </div>
      </div>  
      <div class="form-group row">
        <%= form.label :email, class: "col-2 col-form-label" %>
        <div class="col-10"> 
          <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "" %>
        </div>
      </div>
      <div class="form-group row">
        <%= form.label :password, class: "col-2 col-form-label" %>
        <div class="col-10"> 
          <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "" %>
        </div>
      </div>
      
      <div class="form-group d-flex justify-content-end">
        <%= form.submit class: "btn btn-outline-light btn-lg" %>
        <%= link_to 'Back to index', posts_path, class: "btn btn-outline-light btn-lg ml-3" %>
      </div>  
    <% end %>
  </div>
</div>