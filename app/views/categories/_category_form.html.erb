<div class="row justify-content-center">
  <div class="col-6">
    <%= render 'shared/errors', obj: @category %>
    <%# Form %>
    <%= form_with(model: @category, local: true) do |form| %>
      <div class="form-group row mt-4">
        <%= form.label :name, "Name", class: "col col-form-label py-0" %>
        <div class="col-lg-9 col-12"> 
          <%= form.text_field :name, class: "form-control shadow rounded #{ "with-error" unless @category.errors[:name].blank? }", autocomplete: "off" %>
        </div>
      </div>
      
      <div class="form-group d-flex justify-content-end">
        <%= form.submit "Save", class: "btn btn-dark btn-lg" %>
        <% if @category.new_record? %>
          <%= link_to 'Back to index', posts_path, class: "btn btn-outline-dark btn-lg ml-3" %>
        <% else %>
          <%= link_to 'Cancel', category_path, class: "btn btn-outline-dark btn-lg ml-3" %>
        <% end %>
      </div>  
    <% end %>
  </div>
</div>