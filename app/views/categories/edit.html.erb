<h1 class="text-center mt-4">Editing Category</h1>

<div class="row justify-content-center">
  <div class="col-6">
    <%= render 'shared/errors', obj: @category %>
    <%# Form %>
    <%= form_with(model: @category, local: true) do |form|  %>
      <div class="form-group row mt-4">      
        <%= form.label :name, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= form.text_field :name, class: "form-control shadow rounded" %>
        </div>
      </div>  
      
      <div class="form-group d-flex justify-content-end">
        <%= form.submit 'Save', class: "btn btn-outline-dark btn-lg" %>
        <%= link_to 'Cancel', category_path, class: "btn btn-outline-dark btn-lg ml-3" %>
      </div>  
    <% end %>
  </div>
</div>