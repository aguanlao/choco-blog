<h1 class="text-center mt-4">Create Category</h1>

<div class="row justify-content-center">
  <div class="col-6">
    <%= render 'shared/errors', obj: @category %>
    <%# Form %>
    <%= form_with(model: @category, url: categories_url, local: true) do |form| %>
      <div class="form-group row align-items-center mt-1">
        <%= form.label :name, "Category name", class: "col col-form-label py-0" %>
        <div class="col-lg-9 col-12"> 
          <%= form.text_field :name, class: "form-control shadow rounded #{ "with-error" unless @category.errors[:name].blank? }", autocomplete: "off" %>
        </div>
      </div>
      
      <div class="form-group d-flex justify-content-end">
        <%= form.submit "Save", class: "btn btn-outline-dark btn-lg" %>
        <%= link_to 'Back to index', posts_path, class: "btn btn-outline-dark btn-lg ml-3" %>
      </div>  
    <% end %>
  </div>
</div>