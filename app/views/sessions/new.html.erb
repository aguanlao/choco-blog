<h1 class="text-center mt-4">Log In</h1>
<div class="row justify-content-center">
  <div class="col-8">
    <%= render 'shared/flash_errors' %>    
    <%# Login Form %>
    <%= form_with(scope: :session, url: login_path, local: true) do |form|  %>
      <div class="form-group row mt-4">
        <%= form.label :email, class: "col col-form-label py-0" %>
        <div class="col-lg-9 col-12"> 
          <%= form.email_field :email, class: "form-control shadow rounded", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <%= form.label :password, class: "col col-form-label py-0" %>
        <div class="col-lg-9 col-12"> 
          <%= form.password_field :password, class: "form-control shadow rounded" %>
        </div>
      </div>
      
      <div class="form-group d-flex justify-content-end">
        <%= form.submit "Login", class: "btn btn-dark btn-lg" %>
        <%= link_to 'Cancel', posts_path, class: "btn btn-outline-dark btn-lg ml-3" %>
      </div>  
    <% end %>
  </div>
</div>