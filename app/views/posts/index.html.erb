<h1>All Posts</h1>

<table>
  <thead>
    <tr>
      <th> Title </th>
      <th> Description </th>
      <th> Actions </th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr> 
        <td> <%= post.title %> </td>   
        <td> <%= post.description %> </td>
        <td> Actions </td>
      </tr>
    <% end %>
  </tbody>
</table>