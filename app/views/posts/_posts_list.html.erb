<!-- Posts list -->
<% obj.each do |post| %>
    <div class="card shadow p-0 mt-4">
      <div class="row no-gutters">
        <div class="col-2 align-self-center">
          <img src="https://loremflickr.com/360/480" class="rounded img-fluid" alt="...">
        </div>
        <div class="col d-flex flex-column">
            <div class="card-body">
              <h3 class="card-title"> <%= link_to post.title, post_path(post), class: "link"%> </h3>
              <p class="card-text"> <%= truncate(post.description, length: 256, separator: " ") %> </p>
            </div>
            <div class="text-right mr-2 mb-2">
              <%= link_to 'View', post_path(post), class: "btn btn-secondary" %>
              <%= link_to 'Edit', edit_post_path(post), class: "btn btn-secondary" %>
              <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: "Confirm deleting this post?" }, class: "btn btn-secondary" %>
            </div>
            <div class="card-footer text-muted text-right">
              Posted <%= distance_of_time_in_words_to_now(post.created_at) %> ago
            </div>
        </div>
      </div>

    </div>
<% end %>