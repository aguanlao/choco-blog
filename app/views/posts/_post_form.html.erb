<div class="row justify-content-center">
  <div class="col-10">
    <%= render 'shared/errors', obj: @post %>
    <!-- Form -->
    <%= form_with(model: @post, local: true) do |form|  %>
      <div class="form-group row mt-4">
      
        <%= form.label :title, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= form.text_field :title, class: "form-control shadow rounded", placeholder:"New Chocolate!" %>
        </div>
      </div>  
      <div class="form-group row">
        <%= form.label :description, class: "col-2 col-form-label" %>
        <div class="col-10"> 
          <%= form.text_area :description, rows: 12, class: "form-control shadow rounded", placeholder: "Description, Flavor Profile, Rating" %>
        </div>
      </div>
      <div class="form-group d-flex justify-content-end">
        <%= form.submit class: "btn btn-outline-light btn-lg" %>
        <%= link_to 'Back to index', posts_path, class: "btn btn-outline-light btn-lg ml-3" %>
      </div>  
    <% end %>
  </div>
</div>